<?xml version="1.0" encoding="utf-8" standalone="no"?><web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<welcome-file-list>
		<welcome-file>GetFit.html</welcome-file>
	</welcome-file-list>
	
	<context-param>
	    <param-name>contextConfigLocation</param-name>
	    <param-value>/WEB-INF/db-context.xml /WEB-INF/dao-context.xml /WEB-INF/services-context.xml</param-value>
	</context-param>
	

	<listener>
	    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
		<!-- Servlets -->
	<servlet>
		<servlet-name>UsersServlet</servlet-name>
			<servlet-class>
				com.cs410.getfit.server.users.UsersServlet
			</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ChallengesServlet</servlet-name>
			<servlet-class>
				com.cs410.getfit.server.challenges.ChallengesServlet
			</servlet-class>
	</servlet>

	
	<!-- Servlet mappings -->
	<servlet-mapping>
		<servlet-name>UsersServlet</servlet-name>
		<url-pattern>/users</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UsersServlet</servlet-name>
		<url-pattern>/users/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UsersServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ChallengesServlet</servlet-name>
		<url-pattern>/getfit/challenges</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ChallengesServlet</servlet-name>
		<url-pattern>/getfit/challenges/*</url-pattern>
	</servlet-mapping>

 <servlet>
  <servlet-name>SystemServiceServlet</servlet-name>
  <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
  <init-param>
   <param-name>services</param-name>
   <param-value/>
  </init-param>
 </servlet>
 <servlet-mapping>
  <servlet-name>SystemServiceServlet</servlet-name>
  <url-pattern>/_ah/spi/*</url-pattern>
 </servlet-mapping>
</web-app>