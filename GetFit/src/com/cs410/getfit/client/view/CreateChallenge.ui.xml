<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:webapplication='urn:import:com.cs410.getfit.client.view'>

	<g:HTMLPanel>
		<div class="menuBarPadding" />
		<div class="page-header-createChallenge">
			<h4>
				Create your challenge:
			</h4>
		</div>
		<div class="row">
			<div class="span3">
				<h5>Activities:</h5>
				<g:ListBox ui:field="activitiesList" visibleItemCount="15" />
				<div>
					<g:Button styleName="btn btn-primary" ui:field="addActivityBtn">Add
					</g:Button>
				</div>
			</div>
			<div class="span8">
				<form class="form-inline">
					<h4>
						<g:Label styleName="spaced-label" ui:field="challengeLabel">Challenge Name:</g:Label>
					</h4>
					<g:TextBox ui:field="challengeNameBox" />
				</form>
				<form class="form-inline">
					<h5>
						<g:Label styleName="spaced-label indent" ui:field="startDateLabel">Start
							Date:
						</g:Label>
					</h5>
					<dp:DateBox styleName="span2" ui:field="startDateBox" />
					<h5>
						<g:Label styleName="spaced-label indent" ui:field="endDateLabel">End
							Date:
						</g:Label>
					</h5>
					<dp:DateBox styleName="span2" ui:field="endDateBox" />
				</form>
				<div>
					<form class="form-inline">
						<h5>
							<g:Label styleName="spaced-label indent" ui:field="locationLabel">Location: </g:Label>
						</h5>
						<g:TextBox styleName="spaced-label" ui:field="locationBox" />
					</form>
				</div>
				<div>
					<form class="form-inline">
						<h5>
							<g:Label styleName="spaced-label indent" ui:field="privacyLabel">Privacy Setting: </g:Label>
						</h5>
						<g:RadioButton styleName="spaced-radio" ui:field="privacyPublic" name="privacy" checked="true"/>
						<h5>
							<g:Label styleName="radio-label">Public</g:Label>
						</h5>
						<g:RadioButton styleName="spaced-radio" ui:field="privacyPrivate" name="privacy"/>
						<h5>
							<g:Label styleName="radio-label">Private</g:Label>
						</h5>
					</form>				
				</div>
				<h4>
					<g:Label styleName="spaced-label" ui:field="activitiesLabel">Activities:</g:Label>
				</h4>
				<g:VerticalPanel ui:field="activitiesPanel" />
				<div class="createBtnPadding"/>
				<div>
					<g:Button styleName="btn btn-primary" ui:field="createChallengeBtn">Create Challenge
					</g:Button>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>