<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:webapplication='urn:import:com.cs410.getfit.client.view'>

	<g:HTMLPanel>
		<div class="menu-bar-padding" />
		<div class="page-header-general">
			<h4>
				<g:Label ui:field="titleLabel">Challenges</g:Label>
			</h4>
		</div>
		<div class="row">
			<div class="span3 side-panel">
				<g:VerticalPanel>
					<g:Label styleName="subtitle-label">My challenges:</g:Label>
					<g:VerticalPanel ui:field="userChallengesPanel" />
					<g:Button ui:field="newChallengeBtn" styleName="btn btn-primary large new-challenge-btn">Create a
						new challenge
					</g:Button>
				</g:VerticalPanel>
			</div>
			<div class="span8">
				<div class="span4">
					<g:Label styleName="subtitle-label">Public Challenges:</g:Label>
					<g:VerticalPanel ui:field="challengesPanel" />
				</div>
				<div class="span2">
					<g:Button ui:field="sortByLocationBtn" styleName="btn btn-primary btn-link closest">Closest to me</g:Button>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>