<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:webapplication='urn:import:com.cs410.getfit.client'>

	<g:HTMLPanel>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<g:Label styleName="navbar-title">Get Fit!</g:Label>
				<ul class="nav">
					<li class="active">
						<g:Label styleName="menuBarLinkActive" ui:field="homeLink">Home
						</g:Label>
					</li>
					<li>
						<g:Label styleName="menuBarLink" ui:field="challengeLink">Challenges
						</g:Label>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							Account
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<g:Label styleName="menuBarDropdownLink" ui:field="profileLink">Profile</g:Label>
							</li>
							<li>
								<g:Label styleName="menuBarDropdownLink" ui:field="settingsLink">Settings</g:Label>
							</li>
							<li class="divider"></li>
							<li>
								<g:Label styleName="menuBarDropdownLink" ui:field="logoutLink">Logout</g:Label>
							</li>
						</ul>
					</li>
				</ul>
				<ul class="nav pull-right">
					<li>
						<g:Label styleName="searchLabel">Search</g:Label>
					</li>
					<li>
						<g:ListBox styleName="searchList" ui:field="searchList">
							<g:item value='users'>
								Users
							</g:item>
							<g:item value='challenges'>
								Challenges
							</g:item>
						</g:ListBox>
					</li>
					<form class="navbar-search">
						<input type="text" class="search-query"/>
					</form>
					<li>
						<button class="transparent-btn" ui:field="searchBtn">
							<i class="icon-search icon-white"></i>
						</button>
					</li>
				</ul>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>