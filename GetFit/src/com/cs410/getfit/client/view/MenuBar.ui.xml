<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:webapplication='urn:import:com.cs410.getfit.client'>

	<g:HTMLPanel>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<g:Label styleName="navbar-title">Get Fit!</g:Label>
				<ul class="nav">
					<li class="active">
						<g:Label styleName="menubar-link-active" ui:field="homeLink">Home
						</g:Label>
					</li>
					<li>
						<g:Label styleName="menubar-link" ui:field="challengeLink">Challenges
						</g:Label>
					</li>
					<li>
						<g:Label styleName="menubar-link" ui:field="settingsLink">Settings
						</g:Label>
					</li>
					<li>
						<g:Label styleName="menubar-link" ui:field="logoutLink">Logout
						</g:Label>
					</li>					
				</ul>
				<ul class="nav pull-right">
					<form class="navbar-search">
						<input type="text" placeholder="Search Challenges" class="search-query"/>
					</form>
					<li>
						<button class="transparent-btn" ui:field="searchBtn">
							<i class="icon-search icon-white"></i>
						</button>
					</li>
				</ul>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>