<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:webapplication='urn:import:com.cs410.getfit.client'>
  	
	<g:HTMLPanel>
	<center>
		<div class="hero-unit-login-header">
			<div class="page-header-login">
				<h1>Get Fit! 
					<p><small>Anything you can do I can do (better).</small></p>
				</h1>
			</div>
		</div>
		</center>
		<center>
		<div class="hero-unit-login">
		
			
			<form class="form-horizontal">
				<div class="control-group" align="left">
					<g:Label styleName="control-label" ui:field="usernameLabel">Username</g:Label>
					<div class="controls">	
						<g:TextBox ui:field="usernameBox"/>
					</div>
				</div>
				<div class="control-group" align="left">
					<g:Label styleName="control-label" ui:field="pwdLabel">Password</g:Label>
					<div class="controls">
						<g:PasswordTextBox ui:field="pwdBox"/>
	       			</div>
	        	</div>
	        	<div class="control-group" align="left">
	        	    <div class="controls">
	          			<g:Button styleName="btn btn-primary" ui:field="loginBtn">Login</g:Button>
	          		</div>
	          	</div>
		      	<div class="control-group" align="left">
	        	    <div class="controls">
	          			<small>
	        			<g:Label>Don't have an account?</g:Label>
	        			<a href="">Register now!</a>
	        			</small>
	    	    	</div>
	        	</div>
        	</form>

        </div>
        	</center>	
    </g:HTMLPanel>
  	
</ui:UiBinder>